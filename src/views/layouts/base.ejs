                    <% if (user) { %>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold" href="/auth/profile"><%= user.name %></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold" href="/auth/logout">Salir</a>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold" href="/auth/signIn">Iniciar sesion</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold" href="/auth/signUp">Registrarse</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <%- body %>
    </div>

