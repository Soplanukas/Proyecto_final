<!-- views/categories/index.ejs -->
<div class="row">
    <div class="col-12 text-center">
        <h1 class="fw-bold">Categorías</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <h2>Agregar Categoría</h2>
        <form action="/categories" method="POST">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="name" name="name" placeholder="Ingrese el nombre de la categoría" required>
                <label for="name" class="form-label">Nombre</label>
            </div>
            <button type="submit" class="btn btn-dark">Agregar Categoría</button>
        </form>
    </div>
    <div class="col-md-6">
        <h2>Todas las Categorías</h2>
        <ul class="list-group">
            <% categories.forEach(category => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <%= category.name %>
                    <div class="btn-group" role="group" aria-label="Acciones">
                        <a href="/categories/edit/<%= category.id %>" class="btn btn-primary btn-sm me-2">Editar</a>
                        <!-- Agrega SweetAlert al botón de Eliminar -->
                        <button type="button" class="btn btn-danger btn-sm delete-category-button" data-category-id="<%= category.id %>">Eliminar</button>
                    </div>
                </li>
            <% }); %>
        </ul>
    </div>
</div>
<hr class="my-4">
